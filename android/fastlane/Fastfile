default_platform(:android)

platform :android do
  desc 'Build develop app'
  lane :build_dev do
    generate

    Dir.chdir('../') do
      sh('flutter build apk --dart-define-from-file dart-defines_dev.json')
    end

    lane_context[SharedValues::GRADLE_APK_OUTPUT_PATH] = 'build/app/outputs/apk/release/app-release.apk'
  end

  desc 'Build production app'
  lane :build_prod do
    generate

    Dir.chdir('../') do
      sh('flutter build appbundle --dart-define-from-file dart-defines_prod.json')
    end

    lane_context[SharedValues::GRADLE_AAB_OUTPUT_PATH] = 'build/app/outputs/bundle/release/app-release.aab'
  end

  desc 'Deploy develop app to Firebase App Distribution'
  lane :deploy_dev do
    build_dev

    firebase_app_distribution(
      app: '1:1051662796035:android:5d9e3bd77c9543da651536',
      service_credentials_file: 'fastlane/firebase-app-distribution-develop.json',
      groups: 'testers'
    )
  end
end
