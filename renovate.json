{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "asdf",
    "gradle-wrapper",
    "pyenv",
    "pub",
    "ruby-version",
    "terraform",
    "terraform-version",
    "github-actions"
  ],
  "extends": ["config:best-practices"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["asdf"],
      "addLabels": ["flutter"],
      "automerge": true
    },
    {
      "matchManagers": ["gradle-wrapper"],
      "addLabels": ["gradle"],
      "automerge": true
    },
    {
      "matchManagers": ["pyenv"],
      "addLabels": ["python"],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "cloud_firestore",
        "firebase_analytics",
        "firebase_auth",
        "firebase_core",
        "firebase_crashlytics",
        "firebase_messaging",
        "firebase_remote_config",
        "firebase_storage"
      ],
      "groupName": "firebase"
    },
    {
      "matchManagers": ["pub"],
      "matchPackageNames": ["collection", "dart"],
      "enabled": false
    },
    {
      "matchManagers": ["pub"],
      "addLabels": ["dart"],
      "automerge": true
    },
    {
      "matchManagers": ["ruby-version"],
      "addLabels": ["ruby"],
      "automerge": true,
      "semanticCommitType": "dev"
    },
    {
      "matchManagers": ["terraform", "terraform-version"],
      "addLabels": ["terraform"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["google-github-actions/deploy-cloud-functions"],
      "matchNewValue": "v3",
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github_actions"],
      "automerge": true
    }
  ],
  "prConcurrentLimit": 1,
  "rangeStrategy": "pin",
  "reviewers": ["shotaIDE"]
}
