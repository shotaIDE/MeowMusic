{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "asdf",
    "gradle-wrapper",
    "pyenv",
    "ruby-version",
    "terraform"
  ],
  "labels": ["dependencies"],
  "semanticCommitType": "build",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["asdf"],
      "addLabels": ["flutter"]
    },
    {
      "matchPackagePatterns": ["gradle-wrapper"],
      "addLabels": ["gradle"]
    },
    {
      "matchPackagePatterns": ["pyenv"],
      "addLabels": ["python"]
    },
    {
      "matchPackagePatterns": ["ruby-version"],
      "addLabels": ["ruby"]
    },
    {
      "matchPackagePatterns": ["terraform"],
      "addLabels": ["terraform"]
    }
  ]
}
