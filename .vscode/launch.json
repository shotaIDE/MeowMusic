    {
      "name": "Emulator",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define",
        "FLAVOR=emulator",
        "--dart-define",
        "API_HOST=${input:localServerIP}"
      ],
      "preLaunchTask": "Generate Environments"
    },
    {
      "name": "Emulator-Profile",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--profile",
        "--dart-define",
        "FLAVOR=emulator",
        "--dart-define",
        "API_HOST=${input:localServerIP}"
      ]
    },
    {
      "name": "Develop",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--dart-define", "FLAVOR=dev"]
    },
    {
      "name": "Develop-Profile",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--profile", "--dart-define", "FLAVOR=dev"]
    }
  ],
  "inputs": [
    {
      "id": "localServerIP",
      "type": "promptString",
      "description": "ローカルサーバーのIPアドレスまたはホスト名を入力してください。空のままでEnterを押すと、127.0.0.1が設定されます"
